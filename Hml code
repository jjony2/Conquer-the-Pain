            bookRecommendationsBox.innerHTML = "<p>Recommended books:</p><ul>";
            for (var i = 0; i < selectedBooks.length; i++) {
                bookRecommendationsBox.innerHTML += "<li>" + selectedBooks[i] + "</li>";
            }
            bookRecommendationsBox.innerHTML += "</ul>";
        }


        var challenges = [
            "Read for 30 minutes",
